<%= govuk_cookie_banner do |cb| %>
  <% cb.with_message(heading_text: "Cookies on Find unclaimed court money") do |m| %>
    <% m.with_action { govuk_button_link_to("Hide this message", "/", class: "cookie-hide-button") } %>

    <p class="govuk-body">
      <%= t ".result.#{result}" %>
      You can <%= govuk_link_to "change your cookie settings", cookie_consent_path %> at any time.
    </p>
  <% end %>
<% end %>
